<?xml version="1.0" encoding="utf-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Line -->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/orange_android" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke
                android:width="10dp" android:height="10dp"
                android:color="@color/transparent" />
            <solid android:color="@color/orange_android" />
            <corners
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item> 

<item android:state_focused="true" >
    <shape>
        <gradient
            android:endColor="@color/black1"
            android:startColor="@color/black1"
            android:angle="270" />
        <stroke
            android:width="15dp"
            android:color="@color/black1" />
        <corners
            android:radius="50dp" />
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </shape>
</item>
<item>        
    <shape>
        <gradient
            android:endColor="@color/black1"
            android:startColor="@color/black1"
            android:angle="270" />
        <stroke
            android:width="1dp"
            android:color="@color/black1" />
        <corners
            android:radius="50dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
</selector>